<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_driver"
        android:background="@color/colorPrimary"
        >

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:weightSum="100"
        android:layout_below="@id/toolbar_driver">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#fff">

            <!-- Round image -->

            <ImageView
                android:id="@+id/photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/sagar"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">

            <com.developer.iron_man.gpsmain.Others.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sagar Sharma"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/name"/>

            <com.developer.iron_man.gpsmain.Others.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gwalior,Madhya Pradesh"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/address"/>

            <com.developer.iron_man.gpsmain.Others.MyTextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7997676166"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>

            <com.developer.iron_man.gpsmain.Others.MyTextView
                android:id="@+id/aadhar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhar card : 1234 1234 1234"
                android:textSize="17sp"
                android:layout_gravity="center"/>

            <com.developer.iron_man.gpsmain.Others.MyTextView
                android:id="@+id/license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="License Plate No : RJ06 8878"
                android:textSize="17sp"
                android:layout_gravity="center"/>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>


